<asf xmlversion="1.0">
	<select-by-device id="sam.components.sensor.bno055.example" caption="BNO055 Accelerometer Example">
		<module type="application" id="sam.components.sensor.bno055.example#0" caption="BNO055 Accelerometer Example">
			<info type="description" value="summary">
			This example demonstrates how to configure BNO055 accelerometer and check gravity value of three axis by it.
			</info>
			<build type="c-source" value="bno055_example.c"/>
			<device-support value="same70"/>
			<require idref="sam.utils.syscalls"/>
			<require idref="common.services.basic.clock"/>
			<require idref="common.services.basic.gpio"/>
			<require idref="sam.components.sensor.bno055"/>
			<require idref="sam.drivers.uart"/>
			<require idref="sam.drivers.pmc"/>
			<require idref="sam.drivers.twihs"/>
			<require idref="common.services.delay"/>
			<require idref="common.utils.stdio.stdio_serial"/>
			<info type="gui-flag" value="move-to-root"/>
		</module>
	</select-by-device>
</asf>
