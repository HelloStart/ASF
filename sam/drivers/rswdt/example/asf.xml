<asf xmlversion="1.0">
	<select-by-device id="sam.drivers.rswdt.example" caption="RSWDT Example">
		<module type="application" id="sam.drivers.rswdt.example#sam" caption="RSWDT Example">
			<info type="description" value="summary">
				This example demonstrates how to trigger a watchdog interrupt if the software becomes trapped in a deadlock.
			</info>
			<info type="keyword" value="technology">
				<keyword value="Timers"/>
			</info>
			<build type="c-source" value="rswdt_example.c"/>
			<build type="include-path" value="."/>
			<device-support value="sam3"/>
			<device-support value="sam4s"/>
			<device-support value="sam4e"/>
			<device-support value="sam4n"/>
			<device-support value="sam4c"/>
			<device-support value="samg"/>
			<device-support value="samv70"/>
			<device-support value="samv71"/>
			<device-support value="same70"/>
			<device-support value="sams70"/>
			<require idref="sam.drivers.rswdt"/>
			<require idref="sam.drivers.pio"/>
			<require idref="sam.drivers.pmc"/>
			<require idref="common.utils.stdio.stdio_serial"/>
			<info type="gui-flag" value="move-to-root"/>
		</module>
		<module type="application" id="sam.drivers.rswdt.example#sam4cp_cm" caption="RSWDT Example">
			<info type="description" value="summary">
				This example demonstrates how to trigger a watchdog interrupt if the software becomes trapped in a deadlock.
			</info>
			<info type="keyword" value="technology">
				<keyword value="Timers"/>
			</info>
			<build type="c-source" value="rswdt_example_nobutton.c"/>
			<build type="include-path" value="."/>
			<device-support value="sam4cp"/>
			<device-support value="sam4cm"/>
			<require idref="sam.drivers.rswdt"/>
			<require idref="sam.drivers.pio"/>
			<require idref="sam.drivers.pmc"/>
			<require idref="common.utils.stdio.stdio_serial"/>
			<info type="gui-flag" value="move-to-root"/>
		</module>
	</select-by-device>
</asf>
