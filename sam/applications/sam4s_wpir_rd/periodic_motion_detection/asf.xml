<asf xmlversion="1.0">
	<module type="application" id="sam.applications.periodic_motion_detection" caption="Periodic motion detection demonstration">
		<!-- Summary description -->
		<info type="description" value="summary">
			This demonstration takes a picture and displays it on LCD when a motion is detected.
		</info>

		<!-- Files -->
		<build type="include-path" value="."/>
		<build type="c-source" value="periodic_motion_detection.c"/>

		<!-- Device support -->
		<device-support value="sam4s"/>

		<!-- Required modules -->
		<require idref="sam.drivers.rtt"/>
		<require idref="sam.components.pir_sensor.re200b"/>
		<require idref="common.services.basic.clock"/>
		<require idref="common.services.delay"/>
		<require idref="common.services.basic.gpio"/>
		<require idref="common.utils.stdio.stdio_serial"/>
		<require idref="sam.components.display.ili9325"/>
		<require idref="sam.components.cmos_image_sensor.ov7740"/>
		<require idref="sam.components.display.aat31xx"/>
	</module>
</asf>
