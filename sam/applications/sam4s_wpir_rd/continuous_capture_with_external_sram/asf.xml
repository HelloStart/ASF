<asf xmlversion="1.0">
	<module type="application" id="sam.applications.continuous_capture_with_external_sram" caption="Continuous capture demonstration with external sram">
		<!-- Summary description -->
		<info type="description" value="summary">
			This demonstration works as a camera by configuring microcontroller and ov7740 image sensor in order to continually take picture, store it in external sram and display it on LCD.
		</info>

		<!-- Files -->
		<build type="include-path" value="."/>
		<build type="c-source" value="continuous_capture_with_external_sram.c"/>

		<!-- Required modules -->
		<require idref="sam.drivers.smc"/>
		<require idref="sam.drivers.pmc"/>
		<require idref="sam.drivers.pio"/>
		<require idref="sam.drivers.twi"/>
		<require idref="common.services.basic.clock"/>
		<require idref="common.services.delay"/>
		<require idref="sam.components.display.ili9325"/>
		<require idref="sam.components.cmos_image_sensor.ov7740"/>
		<require idref="sam.components.display.aat31xx"/>
		<require idref="common.services.basic.gpio"/>
		<require idref="common.utils.stdio.stdio_serial"/>

		<!-- Device support -->
		<device-support value="sam4s"/>
	</module>
</asf>
