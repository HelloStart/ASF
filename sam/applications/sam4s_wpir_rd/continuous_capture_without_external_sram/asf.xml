<asf xmlversion="1.0">
	<module type="application" id="sam.applications.continuous_capture_without_external_sram" caption="Continuous capture demonstration without external sram">
		<!-- Summary description -->
		<info type="description" value="summary">
			This demonstration works as a camera by configuring microcontroller and ov7740 image sensor in order to continually take picture using PDC, decode it in internal sram and display it on LCD.
		</info>

		<!-- Keyword -->
		<info type="keyword" value="technology">
			<keyword value="Sensors"/>
		</info>

		<!-- Files -->
		<build type="include-path" value="."/>
		<build type="c-source" value="continuous_capture_without_external_sram.c"/>

		<!-- Required modules -->
		<require idref="common.services.basic.clock"/>
		<require idref="common.services.delay"/>
		<require idref="sam.components.display.ili9325"/>
		<require idref="sam.components.cmos_image_sensor.ov7740"/>
		<require idref="sam.components.display.aat31xx"/>
		<require idref="common.services.basic.gpio"/>
		<require idref="common.utils.stdio.stdio_serial"/>

		<!-- Device support -->
		<device-support value="sam4s"/>
	</module>
</asf>
