<asf xmlversion="1.0">
	<select-by-config id="config.thirdparty.wireless.avr2025_mac.addons.sio2host" name="config.thirdparty.wireless.avr2025_mac.addons.sio2host" caption="CONFIG Serial connectivity Helper files" default="uart">
		<module type="driver" id="config.thirdparty.wireless.avr2025_mac.addons.sio2host#uart"     caption="UART support Enabled">
			<info type="description" value="summary">
			Enables Support for  UART communication
			</info>
			<info type="gui-flag" value="hidden"/>
			<require idref="common.utils.stdio.stdio_serial"/>
			<build type="c-source"      value="uart/sio2host.c"/>
			<build type="header-file"   value="uart/sio2host.h"/>
			<build type="include-path"  value="uart/"/>
			<device-support value="xmega"/>
			<device-support value="uc3"/>
            <device-support value="sam"/>
            <device-support value="megarf"/>
		</module>
		<module type="driver" id="config.thirdparty.wireless.avr2025_mac.addons.sio2host#usb"     caption="USB support Enabled">
			<info type="description" value="summary">
			Enables Support for  USB communication
			</info>
			<info type="gui-flag" value="hidden"/>
			<require idref="common.utils.stdio.stdio_usb"/>
			<build type="c-source"      value="usb/sio2host.c"/>
			<build type="header-file"   value="usb/sio2host.h"/>
			<build type="include-path"  value="usb/"/>
			<device-support value="xmega"/>
			<device-support value="uc3"/>
            <device-support value="sam"/>
            <device-support value="megarf"/>
		</module>
	</select-by-config>
	<module type="component" id="thirdparty.wireless.avr2025_mac.addons.sio2host" caption="COMPONENT - SIO2HOST">
		<info type="description" value="summary">
		The SIO2HOST Component acts as a api layer serial communication
		</info>
		<build type="doxygen-entry-point" value="group_sio_helper"/>

		<require idref="config.thirdparty.wireless.avr2025_mac.addons.sio2host" />

		<build type="module-config" subtype="required-header-file" value="conf_sio2host.h"/>
		<build type="module-config" subtype="path" value="module_config"/>
		<device-support value="xmega"/>
		<device-support value="uc3"/>
		<device-support value="sam"/>
		<device-support value="megarf"/>
	</module>
</asf>
