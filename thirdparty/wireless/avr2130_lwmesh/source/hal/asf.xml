<asf xmlversion="1.0">
	<select-by-device id="config.thirdparty.wireless.avr2130_lwmesh.source.hal" caption="HAL Config_select by device">

		<module type="meta" id="config.thirdparty.wireless.avr2130_lwmesh.source.hal#1"     caption="Hal wrapper for SOC's">
            <info type="description" value="summary">
				HAL wrapper for SOC's
            </info>
			<info type="gui-flag" value="hidden"/>
			<build type="c-source"      value="src/hal.c"/>
			<build type="header-file"   value="inc/hal.h"/>
            <require idref="thirdparty.wireless.common_services.trx_access"/>			
			<build type="include-path"  value="inc/"/>
			<require idref="common.services.delay"/>
			<require idref="common.services.ioport"/>
			<require idref="common.utils"/>				
		    <build type="doxygen-entry-point" value="group_hal"/>			
			<device-support value="atmega256rfr2"/>
			<device-support value="atmega128rfa1"/>
		</module>

        <module type="meta" id="config.thirdparty.wireless.avr2130_lwmesh.source.hal#2"     caption="Hal wrapper for external transceivers">
            <info type="description" value="summary">
            The HAL Layer forms the wrapper layer that forms the interface between the Stack and the Low level drivers.This module includes PAL(Platform Abstraction Layer) wrapper files for boards with External Transceivers
            </info>
			<info type="gui-flag" value="hidden"/>
			<build type="c-source"      value="src/hal.c"/>
			<build type="header-file"   value="inc/hal.h"/>
            <require idref="thirdparty.wireless.common_services.trx_access"/>			
			<build type="include-path"  value="inc/"/>
			<require idref="common.services.delay"/>
			<require idref="common.services.ioport"/>
			<require idref="common.utils"/>				
		    <build type="doxygen-entry-point" value="group_hal"/>
            <require idref="common.services.basic.spi_master"/>
            <device-support-alias value="avr2025_mac_hal_spi_common_support"/>
		</module>
		
		<module type="driver" id="config.thirdparty.wireless.avr2130_lwmesh.source.hal#3"     caption="HAL SPI access (SAMD) for external transceivers">
            <info type="description" value="summary">
            This module includes PAL wrapper files for boards with External Transceivers
            </info>
			<info type="gui-flag" value="hidden"/>
			<build type="c-source"      value="src/hal.c"/>
			<build type="header-file"   value="inc/hal.h"/>
            <require idref="thirdparty.wireless.common_services.trx_access"/>			
			<build type="include-path"  value="inc/"/>
		    <build type="doxygen-entry-point" value="group_hal"/>
			
            <require idref="common2.services.delay"/>
            <require idref="sam0.drivers.sercom.spi"/>
			<require idref="sam0.drivers.extint"/>
			<require idref="sam0.drivers.tc"/>
            <require idref="sam0.drivers.port"/>
            <require idref="sam0.utils"/>
            <device-support-alias value="avr2025_mac_hal_spi_sam0_support"/>
		</module>		
		
	</select-by-device>


	<module type="component" id="thirdparty.wireless.avr2130_lwmesh.source.hal" caption="HAL">
		<info type="description" value="summary">
       
        </info>
		<info type="gui-flag" value="hidden"/>
		<require idref="config.thirdparty.wireless.avr2130_lwmesh.source.hal"/>
		<require idref="thirdparty.wireless.common_services.common_hw_timer"/>

		<build type="doxygen-entry-point" value="group_hal"/>
		<device-support-alias value="avr2025_mac_hal_support"/>
	</module>

	<device-alias-map name="avr2025_mac_hal_spi_common_support">
        <device-support value="atxmega256a3bu"/>
        <device-support value="atxmega256a3u"/>
    </device-alias-map>
	
	<device-alias-map name="avr2025_mac_hal_spi_sam0_support">
        <device-support value="samd20"/>
    </device-alias-map>
    <device-alias-map name="avr2025_mac_hal_support">
        <device-support value="atxmega256a3u"/>
        <device-support value="atmega256rfr2"/>
        <device-support value="atmega128rfa1"/>
        <device-support value="atxmega256a3bu"/>
        <device-support value="samd20"/>
    </device-alias-map>	
    <device-alias-map name="avr2025_mac_hal_spi_support">
        <device-support value="atxmega256a3u"/>
        <device-support value="atxmega256a3bu"/>
        <device-support value="samd20"/>
    </device-alias-map>		


</asf>
