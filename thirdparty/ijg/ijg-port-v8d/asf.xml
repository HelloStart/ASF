<asf xmlversion="1.0">
	<module type="meta" id="thirdparty.libjpeg.port_ijg_8d.common" caption="Atmel jpeg V8d library">
		<build type="include-path" value="."/>
		<build type="header-file" subtype="api" value="jconfig_gcc.h"/>		
		<build type="header-file" subtype="api" value="jconfig_as.h"/>
		<build type="header-file" subtype="api" value="jconfig_iar.h"/>	
		<build type="header-file" subtype="api" value="libjpeg.h"/>	
		<build type="header-file" subtype="api" value="jconfig.h"/>	
		<require idref="thirdparty.libjpeg.ijg_8d.headers_only"/>
		<device-support value="sam" />
	</module>
	
   	<select-by-device id="thirdparty.libjpeg.port_ijg_8d" caption="Libjpeg with device selection">	
		<module type="service" id="thirdparty.libjpeg.port_ijg_8d#sam4" caption="libjpeg for cortex-m4 devices">
			<info type="description" value="summary">
			libjpeg library created with official ijg source v8d and some jpeg source file from Atmel	
			This library works for Cortex-M4 devices.
			</info>
			<build type="library" subtype="user" value="iar/libjpeg_ewarm_cm4_rel.a" toolchain="iarewarm"/>
			<build type="library" subtype="user" value="AtmelStudio/libjpeg_CM4_rel.a" toolchain="as5_arm"/>
			<build type="library" subtype="user" value="GCC/libjpeg_armgcc_release_cm4.a" toolchain="armgcc"/>
			<require idref="thirdparty.libjpeg.port_ijg_8d.common"/>
			<device-support value="sam4" />
			<build type="doxygen-entry-point" value="thirdparty.libjpeg.port_ijg_8d"/>
			<generator value="doxygen-module" default-mcu="unspecified-sam4s"/>	
		</module>	
		<module type="service" id="thirdparty.libjpeg.port_ijg_8d#sam3" caption="libjpeg for cortex-m4 devices">
			<info type="description" value="summary">
			libjpeg library created with official ijg source v8d and some jpeg source file from Atmel	
			This library works for Cortex-M3 devices.
			</info>
			<build type="library" subtype="user" value="iar/libjpeg_ewarm_cm3_rel.a" toolchain="iarewarm"/>
			<build type="library" subtype="user" value="AtmelStudio/libjpeg_CM3_rel.a" toolchain="as5_arm"/>
			<build type="library" subtype="user" value="GCC/libjpeg_armgcc_release_cm3.a" toolchain="armgcc"/>
			<require idref="thirdparty.libjpeg.port_ijg_8d.common"/>
			<device-support value="sam3" />
			<build type="doxygen-entry-point" value="thirdparty.libjpeg.port_ijg_8d"/>
			<generator value="doxygen-module" default-mcu="unspecified-sam3s"/>
		</module>	
	</select-by-device>
</asf>
