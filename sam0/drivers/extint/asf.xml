<asf xmlversion="1.0">
	<select-by-config id="sam0.drivers.extint" name="config.sam0.drivers.extint" caption="External Interrupt Driver" default="callback">
		<info type="description" value="summary">
			Driver for the SAMD20 external interrupts. Provides a unified
			interface for the configuration and management of external
			interrupts generated by the physical device pins.
		</info>
		<info type="keyword" value="technology">
			<keyword value="I/O" />
		</info>

		<module type="driver" id="sam0.drivers.extint#polled" caption="External Interrupt Driver (Polled Mode)">
			<build type="include-path" value="."/>
			<build type="header-file" subtype="api" value="extint.h"/>
			<build type="c-source" value="extint.c"/>

			<build type="define" name="EXTINT_CALLBACK_MODE" value="false"/>

			<build type="header-file" subtype="example" value="quick_start/qs_extint_basic.h"/>
			<build type="doxygen-entry-point" value="asfdoc_samd20_extint_group"/>
			<generator value="doxygen-module-v2" default-mcu="unspecified-samd20"/>

			<require idref="sam0.utils"/>
			<require idref="sam0.drivers.system"/>

			<device-support value="samd20"/>
		</module>

		<module type="driver" id="sam0.drivers.extint#callback" caption="External Interrupt Driver (Callback Mode)">
			<build type="include-path" value="."/>
			<build type="header-file" subtype="api" value="extint.h"/>
			<build type="header-file" subtype="api" value="extint_callback.h"/>
			<build type="c-source" value="extint.c"/>
			<build type="c-source" value="extint_callback.c"/>

			<build type="define" name="EXTINT_CALLBACK_MODE" value="true"/>

			<build type="header-file" subtype="example" value="quick_start/qs_extint_basic.h"/>
			<build type="doxygen-entry-point" value="asfdoc_samd20_extint_group"/>
			<generator value="doxygen-module-v2" default-mcu="unspecified-samd20"/>

			<require idref="sam0.utils"/>
			<require idref="sam0.drivers.system"/>

			<device-support value="samd20"/>
		</module>
	</select-by-config>
</asf>
