<asf xmlversion="1.0">
	<select-by-config caption="XMEGA-B1 Xplained LED support" default="yes" id="config.board.xmega_b1_xplained.led" name="config.board.xmega_b1_xplained.led">
		<module caption="XMEGA-B1 Xplained LED support disabled" id="config.board.xmega_b1_xplained.led#no" type="meta">
		</module>
		<module caption="XMEGA-B1 Xplained LED support enabled" id="config.board.xmega_b1_xplained.led#yes" type="meta">
			<build subtype="api" type="header-file" value="led.h" />
			<build type="include-path" value="." />
			<require idref="common.services.basic.gpio" />
			<require idref="xmega.drivers.ioport" />
		</module>
	</select-by-config>
	
	<select-by-config caption="XMEGA-B1 Xplained initialization support" default="yes" id="config.board.xmega_b1_xplained.init" name="config.board.xmega_b1_xplained.init">
		<module caption="XMEGA-B1 Xplained initialization support disabled" id="config.board.xmega_b1_xplained.init#no" type="meta">
		</module>
		<module caption="XMEGA-B1 Xplained initialization support enabled" id="config.board.xmega_b1_xplained.init#yes" type="meta">
			<build type="c-source" value="init.c" />
			<require idref="common.services.basic.gpio" />
			<require idref="xmega.drivers.ioport" />
		</module>
	</select-by-config>

	<board caption="XMEGA-B1 Xplained" id="board.xmega_b1_xplained" vendor="Atmel">
		<build name="BOARD" type="define" value="XMEGA_B1_XPLAINED" />
		<build subtype="required-header-file" type="module-config" value="conf_board.h" />
		<build subtype="path" type="module-config" value="board_config" />
		<build type="header-file" value="xmega_b1_xplained.h" />
		<build type="include-path" value="." />
		<build type="include-path" value=".." />
		<build subtype="flags" toolchain="avrgcc" type="linker-config" value="--section-start=.BOOT=0x20000" />
		<require idref="common.boards" />
		<require idref="config.board.xmega_b1_xplained.init" />
		<require idref="config.board.xmega_b1_xplained.led" />
		<config name="config.c42048a_type" value="full_matrix0" />
		<device-support value="atxmega128b1" />
	</board>
</asf>