<asf xmlversion="1.0">
	<select-by-config caption="XMEGA-A1 Simulator initialization support" default="yes" id="config.board.simulator.xmega_a1.init" name="config.board.simulator.xmega_a1.init">
		<module caption="XMEGA-A1 Simulator initialization support disabled" id="config.board.simulator.xmega_a1.init#no" type="meta">
		</module>
		<module caption="XMEGA-A1 Simulator initialization support enabled" id="config.board.simulator.xmega_a1.init#yes" type="meta">
			<build type="c-source" value="init.c" />
			<require idref="common.services.basic.gpio" />
			<require idref="xmega.drivers.ioport" />
		</module>
	</select-by-config>

	<board caption="Simulator" id="board.simulator.xmega_a1">
		<build name="BOARD" type="define" value="SIMULATOR_XMEGA_A1" />
		<build subtype="required-header-file" type="module-config" value="conf_board.h" />
		<build type="header-file" value="simulator_xmega_a1.h" />
		<build type="include-path" value="." />
		<build type="include-path" value=".." />
		<build type="include-path" value="../.." />
		<build subtype="flags" toolchain="avrgcc" type="linker-config" value="--section-start=.BOOT=0x20000" />
		<require idref="common.boards" />
		<require idref="config.board.simulator.xmega_a1.init" />
		<device-support value="atxmega128a1" />
	</board>
</asf>