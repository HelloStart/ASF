<asf xmlversion="1.0">
	<select-by-config caption="Xplain LED support" default="yes" id="config.board.xplain.led" name="config.board.xplain.led">
		<module caption="Xplain LED support disabled" id="config.board.xplain.led#no" type="meta">
		</module>
		<module caption="Xplain LED support enabled" id="config.board.xplain.led#yes" type="meta">
			<build subtype="api" type="header-file" value="led.h" />
			<build type="include-path" value="." />
			<require idref="common.services.basic.gpio" />
			<require idref="xmega.drivers.ioport" />
		</module>
	</select-by-config>

	<select-by-config caption="Xplain initialization support" default="yes" id="config.board.xplain.init" name="config.board.xplain.init">
		<module caption="Xplain initialization support disabled" id="config.board.xplain.init#no" type="meta">
		</module>
		<module caption="Xplain initialization support enabled" id="config.board.xplain.init#yes" type="meta">
			<build type="c-source" value="init.c" />
			<require idref="common.services.basic.gpio" />
			<require idref="xmega.drivers.ioport" />
		</module>
	</select-by-config>

	<board caption="Xplain" id="board.xplain" vendor="Atmel">
		<build name="BOARD" type="define" value="XPLAIN" />
		<build subtype="required-header-file" type="module-config" value="conf_board.h" />
		<build subtype="path" type="module-config" value="board_config" />
		<build type="header-file" value="xplain.h" />
		<build type="include-path" value="." />
		<build type="include-path" value=".." />
		<build subtype="flags" toolchain="avrgcc" type="linker-config" value="--section-start=.BOOT=0x20000" />
		<require idref="common.boards" />
		<require idref="config.board.xplain.led" />
		<require idref="config.board.xplain.init" />
		<device-support value="atxmega128a1" />
	</board>
</asf>