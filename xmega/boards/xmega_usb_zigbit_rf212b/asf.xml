<asf xmlversion="1.0">
	<select-by-config id="config.board.xmega_usb_zigbit_rf212b.led" name="config.board.xmega_usb_zigbit_rf212b.led" caption="XMEGA-USB-ZIGBIT RF233 LED support" default="yes">
		<module type="meta" id="config.board.xmega_usb_zigbit_rf212b.led#no" caption="XMEGA-USB-ZIGBIT RF212B LED support disabled">
		</module>
		<module type="meta" id="config.board.xmega_usb_zigbit_rf212b.led#yes" caption="XMEGA-USB-ZIGBIT RF212B LED support enabled">
			<build type="header-file" subtype="api" value="led.h"/>
			<build type="include-path" value="."/>
			<require idref="common.services.basic.gpio"/>
			<require idref="xmega.drivers.ioport"/>
		</module>
	</select-by-config>

	<select-by-config id="config.board.xmega_usb_zigbit_rf212b.init" name="config.board.xmega_usb_zigbit_rf212b.init" caption="XMEGA-USB-ZIGBIT RF212B initialization support" default="yes">
		<module type="meta" id="config.board.xmega_usb_zigbit_rf212b.init#no" caption="XMEGA-USB-ZIGBIT RF212B initialization support disabled">
		</module>
		<module type="meta" id="config.board.xmega_usb_zigbit_rf212b.init#yes" caption="XMEGA-USB-ZIGBIT RF212B initialization support enabled">
			<build type="c-source" value="init.c"/>
			<require idref="common.services.basic.gpio"/>
			<require idref="xmega.drivers.ioport"/>
		</module>
	</select-by-config>

	<board id="board.xmega_usb_zigbit_rf212b" vendor="Atmel" caption="XMEGA-USB-ZIGBIT RF212B">
		<build type="define" name="BOARD" value="XMEGA_USB_ZIGBIT_RF212B"/>
		<build type="module-config" subtype="required-header-file" value="conf_board.h"/>
		<build type="module-config" subtype="path" value="board_config"/>
		<build type="header-file" value="xmega_usb_zigbit_rf212b.h"/>
		<build type="include-path" value="."/>
		<build type="include-path" value=".."/>
		<build type="define" name="CONFIG_NVM_IGNORE_XMEGA_A3_D3_REVB_ERRATA" value=""/>
		<build type="linker-config" subtype="flags" value="--section-start=.BOOT=0x40000" toolchain="avrgcc"/>
		<require idref="common.boards"/>
		<require idref="config.board.xmega_usb_zigbit_rf212b.led"/>
		<require idref="config.board.xmega_usb_zigbit_rf212b.init"/>
		<config name="config.spi_master_type" value="usart_and_standard_spi"/>
		<config name="config.gfx_mono.display" value="c12832_a1z"/>
		<device-support value="atxmega256a3u"/>
	</board>
</asf>
