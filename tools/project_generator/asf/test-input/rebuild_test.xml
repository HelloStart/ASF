<asf xmlversion="1.0">
	<framework-version name="3.5.0"/>
	<documentation baseurl="http://asf.atmel.com/docs/"/>
	<device-map id="map.atmel">
		<group name="avr">
			<mcu name="atmega8"/>
		</group>
	</device-map>

	<project id="project.a" caption="project a" >
			<require idref="driver.a"/>
	</project>

	<project id="project.b" caption="project b">
			<build type="header-file" value="project-b.h"/>
			<require idref="driver.b"/>
	</project>

	<project id="project.c" caption="project c">
			<build type="header-file" value="project-c.h"/>
			<require idref="driver.b"/>
			<require idref="driver.c"/>
	</project>

	<module type="driver" id="driver.a" caption="driver a">
		<build type="c-source" value="da.c"/>
		<build type="header-file" value="da.h"/>
	</module>

	<module type="driver" id="driver.b" caption="driver b">
		<build type="c-source" value="db.c"/>
		<build type="header-file" value="db.h"/>
		<require idref="driver.c"/>
	</module>

	<module type="meta" id="meta.a" caption="meta a">
		<build type="c-source" value="ma.c"/>
		<build type="header-file" value="ma.h"/>
	</module>

	<select-by-device id="driver.c" caption="driver c">
		<module type="driver" id="driver.c#1" caption="driver c 1">
			<build type="c-source" value="dc1.c"/>
			<require idref="meta.a"/>
		</module>
		<module type="driver" id="driver.c#2" caption="driver c 2">
			<build type="c-source" value="dc2.c"/>
			<require idref="meta.a"/>
		</module>
		<module type="driver" id="driver.c#3" caption="driver c 3">
			<build type="c-source" value="dc3.c"/>
		</module>
	</select-by-device>

</asf>