<asf xmlversion="1.0">
	<documentation baseurl="http://dummy/"/>
	<device-map id="map.atmel">
		<group name="avr">
			<group name="xmega">
				<group name="xmegaa">
					<group name="xmegaa1">
						<mcu name="atxmega128a1"/>
					</group>
				</group>
			</group>
		</group>
	</device-map>

	<project id="xmega.driver.awesome.example1.xplain" caption="Awesome driver example 1 for Xplain">
		<build type="include-path" value="."/>
		<build type="header-file" value="conf_board.h"/>
		<build type="header-file" value="conf_awesome.h"/>
		<require idref="board.xplain"/>
		<require idref="xmega.driver.awesome.example1"/>
	</project>

	<board id="board.xplain" caption="Xplain" mcu="atxmega128a1">
		<build type="define" name="BOARD" value="XPLAIN"/>
		<build type="module-config" subtype="required-header-file" value="conf_board.h"/>
		<build type="c-source" value="init.c"/>
		<build type="header-file" value="xplain.h"/>
	</board>

	<module type="application" id="xmega.driver.awesome.example1" caption="Awesome driver example 1">
		<device-support value="xmega"/>
		<info type="description" value="summary">
			This is awesome.
			And this works just fine.
		</info>
		<build type="include-path" value="."/>
		<build type="c-source" value="example1.c"/>
		<build type="header-file" value="example1.h"/>
		<build type="asm-source" value="example1.s"/>
		<build type="library" subtype="user" value="example1.a"/>
		<build type="distribute" subtype="file" value="example1.d"/>
		<build type="distribute" subtype="user-file" value="example1.u"/>
		<build type="distribute" subtype="license" value="example1.l"/>
		<require idref="xmega.driver.awesome"/>
	</module>

	<module type="driver" id="xmega.driver.awesome" caption="Awesome driver">
		<device-support value="xmega"/>
		<build type="include-path" value="."/>
		<build type="c-source" value="awesome.c"/>
		<build type="module-config" subtype="required-header-file" value="conf_awesome.h"/>
		<build type="header-file" value="awesome.h"/>
	</module>
</asf>
