			<build type="header-file" subtype="api" value="twis_megarf.h"/>
			<build type="header-file" value="twi_common.h"/>
			<build type="module-config" subtype="required-header-file" value="conf_twim.h"/>
			<build type="module-config" subtype="required-header-file" value="conf_twis.h"/>
			<build type="module-config" subtype="path" value="module_config"/>			
			<build type="doxygen-entry-point" value="group_megarf_drivers_twi"/>
			<device-support value="megarf"/>
			<generator value="doxygen-module" default-mcu="unspecified-mega"/>
			<require idref="mega.utils"/>
		</module>
